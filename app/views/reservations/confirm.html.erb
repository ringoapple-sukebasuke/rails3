<h2>予約内容確認</h2>

<div class = "reservation_form">


  <%= form_for @reservation, url: { action: 'create' } do |f| %>

    <table>
      <tr>
        <th><%= f.hidden_field :room_id %></th>
        <td><%= f.hidden_field :room_id, readonly: true %></td>
      </tr>

      <tr>
        <th><%= f.label :room_name, "ルーム名" %></th>
        <td><%= f.text_field :room_name, readonly: true %></td>
      </tr>

      <tr>
        <th><%= f.label :room_introduction, "ルーム紹介" %></th>
        <td><%= f.text_field :room_introduction, readonly: true %></td>
      </tr>

      <tr>
      <th><%= f.label :start_day, "開始日" %></th>
      <td><%= f.date_field :start_day, readonly: true %></td>
      </tr>

      <tr>
      <th><%= f.label :end_day, "終了日" %></th>
      <td><%= f.date_field :end_day, readonly: true %></td>
      </tr>

      <tr>
      <th><%= f.label :people, "人数" %></th>
      <td><%= f.text_field :people, readonly: true %></td>
      </tr>

      <tr>
        <th><%= f.label :total_price, "合計料金" %></th>
        <td><%= f.text_field :total_price, readonly: true %></td>
      </tr>
    </table>
    <div>
        <%= f.submit "予約する" %>
    </div>
    <div class="back_btn" >
      <%= link_to "戻る", :back %>
    </div>
  <% end %>
</div>
