<div class = user_form>
  <h2>新しいアカウントを作成</h2>
  <%= form_with model: @user, local: true do |f| %>
    <% @user.errors.full_messages.each do |message| %>
      <div class="form-error">
        <%= message %>
      </div>
    <% end %>
      <table>
        <tr>
          <th><%= f.label :name ,"名前" %></th>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <th><%= f.label :email ,"メールアドレス" %></th>
          <td><%= f.text_field :email %></td>
        </tr>
        <tr>
          <th><%= f.label :password ,"パスワード" %></th>
          <td><%= f.text_field :password %></td>
        </tr>
        <tr>
          <th><%= f.label :password_confirmation ,"パスワード（確認）" %></th>
          <td><%= f.text_field :password_confirmation %></td>
        </tr>
      </table>
      <div>
        <ul>
          <li><%= f.submit "新しいアカウントを作成"%></li>
          <li><%= link_to "すでにアカウントをお持ちの方はログイン", "#" %></li>
        </ul>
      </div>
  <% end %>
</div>