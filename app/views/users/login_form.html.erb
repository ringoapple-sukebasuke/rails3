<h1>ログイン</h1>
<% if @error_message %>
  <%= @error_message %>
<% end %>
  <%= form_with url:login_path, local: true do |form| %>
    <%= form.label :"メールアドレス" %>
    <li>
      <%= form.email_field :email %>
    </li>
    <%= form.label :"パスワード" %>
    <li>
      <%= form.password_field :password %>
    </li>
    <%= form.label :"パスワード確認" %>
    <li>
      <%= form.password_field :password_confirmation %>
    </li>
    <%= form.submit "ログイン" %>
<% end %>