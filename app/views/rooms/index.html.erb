<h2>登録済ルーム一覧</h2>

<table> 
  <thead>
      <tr>
          <th>ルーム画像</th>
          <th>ルーム名</th>
          <th>ルーム紹介</th>
          <th>料金</th>
          <th>作成日</th>
      </tr>
  </thead>
  <tbody>
    <% @room.each do |room| %>
      <tr>
        <td><%= room.room_image %></td>
        <td><%= room.room_name %></td>
        <td><%= room.room_introduction %></td>
        <td><%= room.room_price %></td>
        <td><%= room.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>